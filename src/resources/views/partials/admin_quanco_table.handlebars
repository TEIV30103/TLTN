<button class="btn btn-success mb-3" id="btnAddQuanco"><i class="fas fa-plus"></i> Thêm quân cờ</button>
<table class="table table-bordered table-hover mt-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ảnh quân X</th>
            <th>Ảnh quân O</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        {{#each quancos}}
        <tr data-id="{{this.idQC}}">
            <td>{{this.idQC}}</td>
            <td><img src="/img/BC/{{this.imgX}}" style="height:40px"></td>
            <td><img src="/img/BC/{{this.imgO}}" style="height:40px"></td>
            <td>
                <button class="btn btn-sm btn-warning btn-edit-quanco me-2">
                    <i class="fas fa-edit"></i> Sửa
                </button>
                <button class="btn btn-sm btn-danger btn-delete-quanco">
                    <i class="fas fa-trash"></i> Xóa
                </button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>