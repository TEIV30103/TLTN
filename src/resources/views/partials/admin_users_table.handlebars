<button class="btn btn-success mb-3" id="btnAddUser"><i class="fas fa-plus"></i> Thêm người dùng</button>
<table class="table table-bordered table-hover mt-3" >
    <thead>
        <tr>
            <th>Tài khoản</th>
            <th>Họ tên</th>
            <th>Quyền</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr data-id="{{this.id}}">
            <td>{{this.taiKhoan}}</td>
            <td>{{this.ten}}</td>
            {{!-- <td>{{this.quyen}}</td> --}}
            <td>{{#if (eq this.quyen 1)}}<span>User</span>{{else}}Admin{{/if}}</td>
            <td>{{#if (eq this.khoa 1)}}<span class="text-danger">Đã khóa</span>{{else}}Hoạt động{{/if}}</td>
            <td>
                {{!-- <button class="btn btn-sm btn-warning btn-edit">Sửa</button>
                <button class="btn btn-sm btn-danger btn-delete">Xóa</button> --}}

                <button class="btn btn-sm btn-warning btn-edit me-2">
                    <i class="fas fa-edit"></i> Sửa
                </button>
                <button class="btn btn-sm btn-danger btn-delete">
                    <i class="fas fa-trash"></i> Xóa
                </button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>