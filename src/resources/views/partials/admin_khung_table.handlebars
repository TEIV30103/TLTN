<button class="btn btn-success mb-3" id="btnAddKhung">
    <i class="fas fa-plus"></i> Thêm khung
</button>
<table class="table table-bordered table-hover mt-3" >
    <thead class="table-light">
        <tr>
            <th style="width: 60px;">ID</th>
            <th style="width: 80px;">Ảnh</th>
            <th>Tên file</th>
            <th style="width: 160px;">Hành động</th>
        </tr>
    </thead>
    <tbody>
        {{#each khungs}}
        <tr data-id="{{this.idKhung}}">
            <td>{{this.idKhung}}</td>
            <td>
                <img src="/img/khung/{{this.img}}" alt="khung" style="width:40px;height:40px;object-fit:cover;border-radius:5px;">
            </td>
            <td>{{this.img}}</td>
            <td>
                <button class="btn btn-sm btn-warning btn-edit-khung me-2">
                    <i class="fas fa-edit"></i> Sửa
                </button>
                <button class="btn btn-sm btn-danger btn-delete-khung">
                    <i class="fas fa-trash"></i> Xóa
                </button>
            </td>
        </tr>
        {{else}}
        <tr>
            <td colspan="4" class="text-center text-muted">Chưa có khung nào.</td>
        </tr>
        {{/each}}
    </tbody>
</table>